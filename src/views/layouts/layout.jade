//- Define se o projeto está em desenvolvimento ou produção
- var dev = true

doctype html
<!--[if IE 8]><html class="ie8" lang="pt-br"><![endif]-->
<!--[if IE 9]><html lang="pt-br" class="ie9"><![endif]-->
<!--[if !IE]><!-->
html(lang="pt-br")
	<!--<![endif]-->
	head

		//-
			Metadados que serão fixos para todas as páginas do projeto.

		meta(name='language', content='pt-br')
		meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
		meta(http-equiv="Content-Type",content="text/html;charset=utf-8")
		meta(http-equiv="Cache-Control", content="no-cache")
		meta(http-equiv="Expires", content="0")
		meta(name='contact', content='trendi@trendi.com.br')
		meta(name='author', content='Trendi')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		// [ Main Stylesheet ]
		if dev == true
			link(rel='stylesheet', href='assets/css/style.css')
		else
			link(rel='stylesheet', href='assets/css/style.min.css')
	
	body
		//-
			Inclui o Header do projeto.
		// Header
		include ../includes/header

		//-
			Inclui o conteúdo de cada página do projeto, podendo haver variações de estrutura.
		// Content
		block content
		
		//-
			Inclui o Footer do projeto.
		// Footer
		include ../includes/footer

		// [ Main Javascript ]
		if dev == true
			script(async src='assets/javascript/build.js')
		else
			script(async src='assets/javascript/build.min.js')
