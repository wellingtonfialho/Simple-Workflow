//- Searchbar Mixin

mixin searchbar(classe)
	form(class = classe, role="search")
		div
			label(id="searchbar" class = classe + '_label')
			input(for="searchbar", type="search", class = classe + '_control', placeholder="search")
			button(class = classe + '_icon icon-search')

